{
  "name": "bot-guardian-js",
  "version": "1.0.1",
  "description": "Advanced bot detection and security middleware for Node.js applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "start": "node dist/middleware/express.js",
    "dev": "ts-node src/middleware/express.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit --runInBand",
    "test:coverage:view": "jest --coverage && open coverage/lcov-report/index.html",
    "test:ci": "jest --coverage --ci",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build",
    "version:patch": "npm version patch -m 'Release %s'",
    "version:minor": "npm version minor -m 'Release %s'",
    "version:major": "npm version major -m 'Release %s'",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "security",
    "bot-detection",
    "middleware",
    "express",
    "nodejs",
    "typescript",
    "anti-bot",
    "protection"
  ],
  "author": "Mahmoud Hamsho",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/guardianjs.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/guardianjs/issues"
  },
  "homepage": "https://github.com/yourusername/guardianjs#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "@types/supertest": "^6.0.2",
    "@types/ua-parser-js": "^0.7.39",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "ua-parser-js": "^1.0.40"
  }
}
